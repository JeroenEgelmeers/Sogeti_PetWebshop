<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="PetSupplies" transaction-type="JTA">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source>java:app/petsupplies</jta-data-source>
        <class>com.mycompany.petsupplies.model.Account</class>
        <class>com.mycompany.petsupplies.model.Account_role</class>
        <class>com.mycompany.petsupplies.model.Currency</class>
        <class>com.mycompany.petsupplies.model.Language</class>
        <class>com.mycompany.petsupplies.model.Order_address</class>
        <class>com.mycompany.petsupplies.model.Order_status</class>
        <class>com.mycompany.petsupplies.model.Product</class>
        <class>com.mycompany.petsupplies.model.Product_category</class>
        <class>com.mycompany.petsupplies.model.Product_in_order</class>
        <class>com.mycompany.petsupplies.model.ClientOrder</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/petsupplies?zeroDateTimeBehavior=convertToNull" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="create" />
        
            <!--<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>-->
            <!--<property name="javax.persistence.schema-generation.create-source" value="create"/>-->
        </properties>
    </persistence-unit>
</persistence>
